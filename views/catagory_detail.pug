extends layout 

block content 
    h1 Catagory: #{catagory.name}

    p #[strong Description: ] #{catagory.description}

    div(style='margin-left:20px;margin-top:20px')

        h3 Items 
        if catagory_items.length 
            dl 
                each item in catagory_items 
                    dt 
                        a(href=item.url) #{item.name}
                        p $#{item.price}
        else 
            p This Catagory has no items.

    hr
    p 
        a(href=catagory.url+'/delete') Delete Catagory
    p 
        a(href=catagory.url+'/update') Update Catagory
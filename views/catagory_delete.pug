extends layout 

block content 

    h1 #{title}: #{catagory.name}
    p= catagory.description 

    if catagory_items.length 

        p #[strong Delete the following items before attempting to delete this catagory.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Items 
            dl 
                each item in catagory_items 
                    dt 
                        a(href=item.url) #{item.name}
                    dd #{item.description}

    else 
        p Do you really want to delete this Catagory?

        form(method='POST')
            div.form-group
                input#catagory.form-control(type='hidden', name='catagoryid', value=catagory._id )

            button.btn.btn-primary(type='submit') Delete
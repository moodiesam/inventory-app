extends layout 

block content 

    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='name') Catagory: 
            input#name.form-control(type="text", placeholder='Soap, Skincare etc.', name='name' required value=(undefined===catagory ? '' : catagory.name) )
        div.form-group    
            label(for='description') Description: 
            textarea#catagory.form-control(name='description' required)= undefined===catagory ? '' : catagory.description
            
            button.btn.btn-primary(type='submit') Submit
        
        if errors 
            ul 
                for error in errors 
                    li!= error.msg